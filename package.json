{
  "name": "slush-module",
  "version": "0.0.1",
  "description": "slush es6 module generator and maintainer",
  "main": "dist/slushfile.js",
  "scripts": {
    "gulp": "gulp",
    "test": "npm run gulp -- test"
  },
  "config": {
    "src": "src",
    "build": ".build",
    "dist": "dist",
    "test": "test",
    "smg": ".smg",
    "doc": "doc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nhz-io/slush-module.git"
  },
  "keywords": [
    "slushgenerator",
    "es6",
    "gulp",
    "slush",
    "scaffolding",
    "nhz.io",
    "nhz-io",
    "slush-module"
  ],
  "author": "Ishi Ruy < <dev@nhz.io> (https://github.com/nhz-io)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nhz-io/slush-module/issues",
    "email": "dev@nhz.io"
  },
  "homepage": "https://nhz-io.github.io/slush-module",
  "dependencies": {
    "convict": "^1.4.0",
    "del": "^2.2.2",
    "gulp": "^3.9.1",
    "gulp-bump": "^2.4.0",
    "gulp-conflict": "^0.4.0",
    "gulp-consolidate": "^0.2.0",
    "gulp-conventional-changelog": "^1.1.0",
    "gulp-copy": "0.0.2",
    "gulp-cson": "^0.4.0",
    "gulp-exclude-gitignore": "^1.0.0",
    "gulp-filter": "^4.0.0",
    "gulp-gitmodified": "^1.1.1",
    "gulp-if": "^2.0.1",
    "gulp-install": "^0.6.0",
    "gulp-jison": "^1.2.0",
    "gulp-jsdoc": "^0.1.5",
    "gulp-line-ending-corrector": "^1.0.1",
    "gulp-load-plugins": "^1.2.4",
    "gulp-merge": "^0.1.1",
    "gulp-mirror": "^1.0.0",
    "gulp-peg": "^0.2.0",
    "gulp-rename": "^1.2.2",
    "gulp-sequence": "^0.4.6",
    "gulp-tag-version": "^1.3.0",
    "gulp-todo": "^5.0.0",
    "inquirer": "^1.1.3",
    "lodash.assign": "^4.2.0",
    "lodash.clonedeep": "^4.5.0",
    "lodash.defaults": "^4.2.0",
    "lodash.pick": "^4.4.0",
    "slush": "^1.1.1",
    "vinyl-paths": "^2.1.0"
  },
  "devDependencies": {
    "ava-spec": "^1.0.1",
    "babel-cli": "^6.14.0",
    "babel-plugin-mocktail": "^0.1.16",
    "babel-plugin-syntax-flow": "^6.13.0",
    "babel-plugin-transform-flow-strip-types": "^6.14.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-preset-stage-1": "^6.13.0",
    "babel-preset-stage-2": "^6.13.0",
    "babel-register": "^6.14.0",
    "eslint-plugin-flow-vars": "^0.5.0",
    "gulp-ava": "^0.14.1",
    "gulp-babel": "^6.1.2",
    "gulp-flowtype": "^1.0.0",
    "gulp-jsdoc": "^0.1.5",
    "gulp-rollup": "^2.3.0",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-uglify": "^2.0.0",
    "gulp-xo": "^0.12.0",
    "is-class": "0.0.4",
    "jsdoc": "^3.4.0",
    "mocktail": "^0.3.8",
    "rollup-plugin-commonjs": "^4.1.0",
    "rollup-plugin-flow": "^1.0.1",
    "rollup-plugin-node-resolve": "^2.0.0"
  },
  "xo": {
    "esnext": true,
    "ignores": [
      "dist/**",
      "doc/**",
      "test/**",
      "**/tmp/**"
    ],
    "plugins": [
      "flow-vars"
    ],
    "rules": {
      "semi": [
        1,
        "never"
      ],
      "no-fallthrough": 1,
      "babel/new-cap": 1,
      "comma-dangle": [
        1,
        "always-multiline"
      ],
      "flow-vars/define-flow-type": 1,
      "flow-vars/use-flow-type": 1
    }
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "files": [
      "test/**/*.js",
      "!**/tmp"
    ],
    "babel": {
      "presets": [
        "es2015",
        "stage-0",
        "stage-1",
        "stage-2",
        "stage-3"
      ],
      "plugins": [
        "transform-flow-strip-types",
        "mocktail"
      ]
    }
  }
}
